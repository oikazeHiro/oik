<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oik.dao.mapper.UserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.oik.dao.entity.User">
        <id column="USER_ID" property="userId"/>
        <result column="USERNAME" property="username"/>
        <result column="PASSWORD" property="password"/>
        <result column="DEPT_ID" property="deptId"/>
        <result column="EMAIL" property="email"/>
        <result column="MOBILE" property="mobile"/>
        <result column="STATUS" property="status"/>
        <result column="LAST_LOGIN_TIME" property="lastLoginTime"/>
        <result column="SSEX" property="ssex"/>
        <result column="DESCRIPTION" property="description"/>
        <result column="AVATAR" property="avatar"/>
        <result column="CREATE_USERNAME" property="createUsername"/>
        <result column="CREATE_USER_ID" property="createUserId"/>
        <result column="CREATE_TIME" property="createTime"/>
        <result column="UPDATE_USERNAME" property="updateUsername"/>
        <result column="UPDATE_TIME" property="updateTime"/>
        <result column="UPDATE_USER_ID" property="updateUserId"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        USER_ID
        , USERNAME, `PASSWORD`, DEPT_ID, EMAIL, MOBILE, `STATUS`, LAST_LOGIN_TIME, SSEX, DESCRIPTION, AVATAR, CREATE_USERNAME, CREATE_USER_ID, CREATE_TIME, UPDATE_USERNAME, UPDATE_TIME, UPDATE_USER_ID
    </sql>
    <select id="findSubordinates" resultType="java.lang.String">
        SELECT GROUP_CONCAT(u.user_id)
        FROM sys_user u
                 LEFT JOIN sys_dept d ON u.dept_id = d.dept_id
        WHERE (d.dept_id = #{deptId} OR d.parent_id = #{deptId})
    </select>

</mapper>
